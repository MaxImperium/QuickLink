# =============================================================================
# QuickLink Environment Configuration
# =============================================================================
# Copy this file to .env.local for local development
# Never commit .env.local to version control

# -----------------------------------------------------------------------------
# General
# -----------------------------------------------------------------------------
NODE_ENV=development
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://quicklink:quicklink@localhost:5432/quicklink?schema=public
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# -----------------------------------------------------------------------------
# Cache (Redis)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=ql:

# -----------------------------------------------------------------------------
# API Service
# -----------------------------------------------------------------------------
API_PORT=3001
API_HOST=0.0.0.0
API_CORS_ORIGINS=http://localhost:3000

# -----------------------------------------------------------------------------
# Redirect Service
# -----------------------------------------------------------------------------
REDIRECT_PORT=3002
REDIRECT_HOST=0.0.0.0
# Cache TTL for redirects in seconds (default: 1 hour)
REDIRECT_CACHE_TTL=3600

# -----------------------------------------------------------------------------
# Web Frontend
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_REDIRECT_URL=http://localhost:3002

# -----------------------------------------------------------------------------
# Queue (BullMQ / SQS)
# -----------------------------------------------------------------------------
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5

# -----------------------------------------------------------------------------
# Analytics
# -----------------------------------------------------------------------------
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL_MS=5000

# -----------------------------------------------------------------------------
# Authentication (Future)
# -----------------------------------------------------------------------------
# JWT_SECRET=your-super-secret-key-change-in-production
# JWT_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# Observability (Future)
# -----------------------------------------------------------------------------
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
# SENTRY_DSN=
