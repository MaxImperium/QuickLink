{
  "name": "@quicklink/shared",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types/index.ts",
    "./utils": "./src/utils/index.ts",
    "./constants": "./src/constants/index.ts"
  },
    "scripts": {
        "build": "tsup src/index.ts --format esm --dts",
        "lint": "eslint src/",
        "typecheck": "tsc --noEmit",
        "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
        "test:ci": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --ci --coverage",
        "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
        "clean": "rm -rf dist .turbo node_modules"
    },
  "dependencies": {
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@quicklink/config": "workspace:*",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
